{
    "name": "dhtml/composer",
    "description": "Preview new flarum discussion.",
    "keywords": [
        "flarum",
        "composer",
        "preview"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthony Ogundipe",
            "email": "diltony@gmail.com",
            "homepage": "https://africoders.com/"
        }
    ],
    "require": {
        "flarum/core": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Dhtml\\Composer\\": "src/",
            "Dhtml\\Composer\\Controllers\\": "src/Controllers"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Composer Preview BBCode",
            "category": "feature",
            "icon": {
                "name": "far fa-eye",
                "backgroundColor": "#008000",
                "color": "#fff"
            }
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true
            }
        }
    },
    "homepage": "https://africoders.com",
    "require": {
        "flarum/core": "^1.8"
    }
}
